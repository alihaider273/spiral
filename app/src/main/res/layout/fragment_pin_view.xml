<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_call"
        android:layout_width="60dp"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:layout_marginTop="200dp"
        android:visibility="gone"
        android:src="@drawable/ic_caller_"
         />
    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
    android:max="100" />

    <LinearLayout
        android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:padding="3dp"
        android:src="@drawable/ic_back" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/ic_frame" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/inter_regular"
        android:text="Jane Doe Mathews"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/inter_regular"
        android:text="0712364748"
        android:textColor="@color/grey"
        android:textSize="17sp" />

    <com.chaos.view.PinView
        android:id="@+id/pin_view"
        style="@style/PinWidget.PinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        android:cursorVisible="true"
        android:inputType="text"
        android:itemBackground="@drawable/ic_circle"
        android:padding="5dp"
        android:textColor="@color/see_green"
        android:textSize="22sp"
        android:textStyle="bold"
        app:cursorColor="@color/navy_blue"
        app:cursorWidth="2dp"
        app:hideLineWhenFilled="true"
        app:itemCount="4"
        app:itemHeight="58dp"
        app:itemRadius="4dp"
        app:itemSpacing="20dp"
        app:itemWidth="58dp"
        app:lineColor="@color/white"
        app:lineWidth="2dp"
        app:viewType="rectangle" />

    <TextView
        android:id="@+id/tv_enter_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectangle_light_blue"
        android:fontFamily="@font/inter_semibold"
        android:paddingVertical="12dp"
        android:text="@string/enter_pin"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:columnCount="3"
        android:rowCount="4">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:fontFamily="@font/inter_medium"
            android:paddingVertical="15dp"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/black_light"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:fontFamily="@font/inter_medium"
            android:paddingVertical="15dp"
            android:text="2"
            android:textAlignment="center"
            android:textColor="@color/black_light"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:fontFamily="@font/inter_medium"
            android:paddingVertical="15dp"
            android:text="3"
            android:textAlignment="center"
            android:textColor="@color/black_light"
            android:textSize="28sp" />


        <TextView
            android:id="@+id/tv_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:fontFamily="@font/inter_medium"
            android:paddingVertical="15dp"
            android:text="4"
            android:textAlignment="center"
            android:textColor="@color/black_light"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:fontFamily="@font/inter_medium"
            android:paddingVertical="15dp"
            android:text="5"
            android:textAlignment="center"
            android:textColor="@color/black_light"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:fontFamily="@font/inter_medium"
            android:paddingVertical="15dp"
            android:text="6"
            android:textAlignment="center"
            android:textColor="@color/black_light"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:fontFamily="@font/inter_medium"
            android:paddingVertical="15dp"
            android:text="7"
            android:textAlignment="center"
            android:textColor="@color/black_light"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:fontFamily="@font/inter_medium"
            android:paddingVertical="15dp"
            android:text="8"
            android:textAlignment="center"
            android:textColor="@color/black_light"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:fontFamily="@font/inter_medium"
            android:paddingVertical="15dp"
            android:text="9"
            android:textAlignment="center"
            android:textColor="@color/black_light"
            android:textSize="28sp" />


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_columnWeight="1" />

        <TextView
            android:id="@+id/tv_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:fontFamily="@font/inter_medium"
            android:paddingVertical="15dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black_light"
            android:textSize="28sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1">

            <ImageView
                android:id="@+id/iv_thumb"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:paddingVertical="20dp"
                android:src="@drawable/ic_thumb" />
        </RelativeLayout>
    </GridLayout>

</LinearLayout>
</LinearLayout>